# AI Tutor Prototype - Environment Variables
# Copy this file to .env and fill in your values

# ===========================
# OpenAI Configuration
# ===========================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here-optional

# ===========================
# n8n Configuration
# ===========================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
# For production, use https
# N8N_PROTOCOL=https

# n8n Basic Auth (optional, for security)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password-here

# Webhook Authentication
WEBHOOK_AUTH_TOKEN=your-secret-webhook-token-here

# ===========================
# Redis Configuration (Optional)
# ===========================
# For session storage
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here-optional
REDIS_TTL=1800
# TTL in seconds (1800 = 30 minutes)

# Redis Cloud example:
# REDIS_URL=redis://redis-12345.c123.us-east-1-1.ec2.cloud.redislabs.com:12345
# REDIS_PASSWORD=your-cloud-redis-password

# ===========================
# MinS Integration
# ===========================
# URL to n8n webhook (update after deployment)
TUTOR_WEBHOOK_URL=http://localhost:5678/webhook/tutor/message
# For production:
# TUTOR_WEBHOOK_URL=https://your-n8n-instance.com/webhook/tutor/message

# MinS Backend API (if using backend proxy)
MINS_API_URL=http://localhost:3000/api

# ===========================
# Monitoring & Logging
# ===========================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN (optional, for error tracking)
SENTRY_DSN=your-sentry-dsn-here-optional

# ===========================
# Performance
# ===========================
# Timeout for LLM calls (milliseconds)
LLM_TIMEOUT=10000

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=100

# ===========================
# Feature Flags (Future Use)
# ===========================
ENABLE_RAG=false
ENABLE_VOICE=false
ENABLE_MULTI_LANGUAGE=false

# ===========================
# Development
# ===========================
NODE_ENV=development
# For production: NODE_ENV=production

DEBUG=false
